<div class="container">

    <div class="jumbotron">
        <h1>Nom Nom Burgers.</h1>
        <br>
        <h2>What kind of burger are you in the mood for today?</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger">Burger Choices:</label>
                    {{!-- <input type="text" id="newburger" name="burger"> --}}
                    <select data-placeholder="" id="newburger" name="burger">
                        <option value="Nothing Selected" selected>Select Another</option>
                        <option value="Hamburger">Hamburger</option>
                        <option value="Cheeseburger">Cheeseburger</option>
                        <option value="TurkeyBurger">Turkey Burger</option>
                        <option value="VeggieBurger">Veggie Burger</option>
                        <option value="AhiTunaBurger">Ahi Tuna Burger</option>
                    </select>

                    <button type="submit" class="btn btn-primary" id="addburger">
                        <span class="fas fa-hamburger"></span>
                    </button>
                </div>
            </form>
        </panel>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftside"><strong>Yet to be Devoured:</strong>
                </div>
                <div class="panel-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.ID}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-warning" data-id="{{this.ID}}"
                            data-newDevoured="{{devour}}"><span class="fas fa-utensils"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightside"><strong>Devoured:</strong>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.ID}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.ID}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>